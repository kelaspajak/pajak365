      },
      {
        name: 'Buku Cermat pemotongan PPh 21',
        href: 'https://drive.google.com/file/d/1we0DLvxbSP8bKqffCKHiHtOr08NcaRmJ/view?usp=drive_link',
      },
      {
        name: 'eBook perekaman PPh 21',
        href: 'https://drive.google.com/file/d/18GmB5ht1gc4PcQzaXWrPtjVwl0bi7lqm/view?usp=drive_link',
      },
      {
        name: 'Petunjuk ebukpot PPh 21',
        href: 'https://drive.google.com/file/d/1dow-MG1LC5NtzKGaTYnD6LTsBjUZor5r/view?usp=drive_link',
      },
      {
        name: 'Paparan PMK 168 tahun 2023',
        href: 'https://drive.google.com/file/d/1x0hKUDqtGcSXJ71LH-h46qO333dct7F5/view?usp=drive_link',
      },
      {
        name: 'Paparan Per 2 tahun 2024',
        href: 'https://drive.google.com/file/d/1sm2IIbev72OdtSBKQbqFs_9guRgS7GQz/view?usp=drive_link',
      },
      {
        name: 'Paparan PP 58 tahun 2023',
        href: 'https://drive.google.com/file/d/1Ea4KtQ1DkrA3P_4X1fRy_AUAh-3luLie/view?usp=drive_link',
      },
    ],
    icon: 'BeakerIcon',
    featured: false,
  },
  {
    name: 'Aspek Perpajakan Indonesia',
    features: [
      {
        name: 'Usaha Hotel',
        href: 'https://docs.google.com/presentation/d/1HKb6n3m-OMOF_7lRIfHDP2fMMok7Fhtc/view?usp=drive_link',
      },
      {
        name: 'Notaris & PPAT',
        href: 'https://docs.google.com/presentation/d/1I-XyP_q-khn1_JdsyRxPEO_P05j9hj-4/view?usp=drive_link',
      },
    ],
    icon: 'Hotel',
    featured: true,
  },
  {
    name: 'Pajak UMKM',
    features: [
      {
        name: 'Leaflet PP23 tahun 2018',
        href: 'https://drive.google.com/file/d/1oSSk6nkVog7YsEwlfWGAi1RH7sM7809a/view?usp=drive_link',
      },
      {
        name: 'Cara membuat billing ',
        href: 'https://drive.google.com/file/d/1UCv8aQdYSUBs788s0SaRzJC0oLJtsEsz/view?usp=drive_link',
      },
    ],
    icon: 'BriefcaseBusiness',
    featured: true,
  },
  {
    name: 'Lain-lain',
    features: [
      {
        name: 'Tabel KLU',
        href: 'https://docs.google.com/spreadsheets/d/1kBBwnmStl4Pelsi_Uq1fESGQ3sw_Zm0u/view?usp=drive_link',
      },
    ],
    icon: 'Aperture',
    featured: true,
  },
