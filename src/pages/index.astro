---
import Layout from '../layouts/base.astro'
import { Camera, Anvil, Aperture, Check } from 'lucide-react'

const tiers = [
  {
    title: 'Hobby',
    id: 'tier-hobby',
    href: '#',
    priceMonthly: '$29',
    type: 'tahunan',
    description: 'The perfect plan if youre just getting started with our product.',
    features: ['25 products', 'Up to 10000 subscribers', 'Advanced analytics', '24-hour support response time'],
    featured: false,
  },
  {
    title: 'Enterprise',
    id: 'tier-enterprise',
    href: '#',
    priceMonthly: 'Contact Sales',
    type: '2 bulan',
    description: 'Dedicated support and infrastructure for your company.',
    features: [
      'Unlimited products',
      'Unlimited subscribers',
      'Advanced analytics',
      'Dedicated support representative',
      'Marketing automations',
      'Custom integrations',
    ],
    featured: true,
  },
]

const freetools = [
  {
    name: 'Desk and Office',
    description: 'Work from home accessories',
    imageSrc: 'https://tailwindui.com/plus/img/ecommerce-images/home-page-02-edition-01.jpg',
    imageAlt: 'Desk with leather desk pad, walnut desk organizer, wireless keyboard and mouse, and porcelain mug.',
    href: '#',
    icon: Camera,
  },
  {
    name: 'Self-Improvement',
    description: 'Journals and note-taking',
    imageSrc: 'https://tailwindui.com/plus/img/ecommerce-images/home-page-02-edition-02.jpg',
    imageAlt: 'Wood table with porcelain mug, leather journal, brass pen, leather key ring, and a houseplant.',
    href: '#',
    icon: Anvil,
  },
  {
    name: 'Travel',
    description: 'Daily commute essentials',
    imageSrc: 'https://tailwindui.com/plus/img/ecommerce-images/home-page-02-edition-03.jpg',
    imageAlt: 'Collection of four insulated travel bottles on wooden shelf.',
    href: '#',
    icon: Aperture,
  },
]

function classNames(...classes) {
  return classes.filter(Boolean).join(' ')
}
---

<Layout id="main-container">
  <div
    class="relative overflow-hidden before:absolute before:top-1/2 before:start-1/2 before:bg-[url('../svg/component/hyperdrive.svg')] dark:before:bg-[url('../svg/component-dark/hyperdrive.svg')] before:bg-no-repeat before:bg-center before:w-full before:h-96 before:-z-[1] before:transform before:-translate-y-1/2 before:-translate-x-1/2"
  >
    <div class="max-w-3xl mx-auto relative text-center px-4 sm:px-6 lg:px-8 py-10 md:py-24">
      <div class="inline-block bg-gradient-to-tl from-blue-600 via-transparent to-purple-400 p-px rounded-xl mb-3">
        <div
          class="bg-white rounded-xl py-1.5 px-3 text-3xl font-bold md:text-4xl lg:text-5xl lg:leading-tight dark:bg-neutral-900"
        >
          <span class="bg-clip-text bg-gradient-to-tl from-blue-600 to-purple-400 text-transparent"> 1.200+ </span>
        </div>
      </div>

      <h1 class="text-3xl font-bold md:text-4xl lg:text-5xl lg:leading-tight dark:text-white">
        Starter Pages &amp; Examples
      </h1>
      <p class="mt-4 md:text-lg text-gray-600 dark:text-neutral-400">
        Free Tailwind CSS resources as building blocks for websites and web applications. Browse pre-built sections,
        forms, modals, and more.
      </p>
    </div>
  </div>

  <div class="overflow-hidden">
    <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
      <div class="mx-auto max-w-2xl mb-8 lg:mb-14 text-center">
        <h2 class="text-3xl lg:text-4xl text-gray-800 font-bold dark:text-neutral-200">
          Solo, agency or team? Weve got you covered.
        </h2>
      </div>

      <div class="relative xl:w-10/12 xl:mx-auto">
        <div class="mx-auto py-12 grid md:grid-cols-2 gap-4 sm:gap-6 items-center">
          {
            tiers.map((tier, tierIdx) => (
              <div>
                {/* shadow-xl shadow-gray-200 p-5 relative z-10 bg-white border rounded-xl md:p-10 dark:bg-neutral-900 dark:border-neutral-800 dark:shadow-gray-900/20 */}
                {/* p-4 relative z-10 bg-white border rounded-xl md:p-10 dark:bg-neutral-900 dark:border-neutral-800 */}
                <div
                  class={classNames(
                    tier.featured
                      ? 'shadow-xl shadow-purple-200 p-5 dark:border-neutral-800 dark:shadow-purple-900/20'
                      : 'p-4 dark:border-neutral-800',
                    'relative z-10 bg-white border rounded-xl md:p-10 dark:bg-neutral-900',
                  )}
                >
                  <h3 class="text-xl font-bold text-gray-800 dark:text-neutral-200">{tier.title}</h3>
                  <div class="text-sm text-gray-500 dark:text-neutral-500">{tier.description}</div>

                  <div class="mt-5">
                    <span class="text-6xl font-bold text-gray-800 dark:text-neutral-200">{tier.priceMonthly}</span>
                    {/* <span class="text-lg font-bold text-gray-800 dark:text-neutral-200">
                      .00
                    </span>
                    <span class="ms-3 text-gray-500 dark:text-neutral-500">
                      USD / monthly
                    </span> */}
                  </div>

                  <div class="mt-5 grid gap-y-2 py-4 first:pt-0 last:pb-0 sm:gap-x-6 sm:gap-y-0">
                    <ul class="space-y-2 text-sm sm:text-base">
                      {tier.features.map((feature) => (
                        <li class="flex gap-x-3">
                          <span class="mt-0.5 size-5 flex justify-center items-center rounded-full bg-purple-50 text-purple-600 dark:bg-purple-800/30 dark:text-purple-500">
                            <Check class="shrink-0 size-3.5" />
                            {/* <svg
                              xmlns="http://www.w3.org/2000/svg"
                              width="24"
                              height="24"
                              viewBox="0 0 24 24"
                              fill="none"
                              stroke="currentColor"
                              stroke-width="2"
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              class="shrink-0 size-3.5"
                            >
                              <path d="M20 6 9 17l-5-5" />
                            </svg> */}
                          </span>
                          <span class="text-gray-800 dark:text-neutral-200">{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div class="mt-5 grid grid-cols-2 gap-x-4 py-4 first:pt-0 last:pb-0">
                    <div>
                      <p class="text-sm text-gray-500 dark:text-neutral-500">Cancel anytime.</p>
                      <p class="text-sm text-gray-500 dark:text-neutral-500">No card required.</p>
                    </div>

                    <div class="flex justify-end">
                      <button
                        type="button"
                        class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-50 dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
                      >
                        Start free trial
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <div class="mt-7 text-center">
        <p class="text-xs text-gray-400">Prices in USD. Taxes may apply.</p>
      </div>
    </div>
  </div>

  <div class="relative">
    <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 md:py-14 lg:py-20 mx-auto">
      <div class="max-w-2xl mx-auto text-center mb-10 lg:mb-14">
        <h2 class="text-2xl font-bold md:text-3xl md:leading-tight dark:text-white">Free Tools</h2>
      </div>

      <div class="mt-5 lg:mt-16 grid lg:grid-cols-3 gap-8 lg:gap-12">
        <div class="lg:col-span-1">
          <h2 class="font-bold text-2xl md:text-3xl text-gray-800 dark:text-neutral-200">
            We tackle the challenges start-ups face
          </h2>
          <p class="mt-2 md:mt-4 text-gray-500 dark:text-neutral-500">
            Besides working with start-up enterprises as a partner for digitalization, we have built enterprise products
            for common pain points that we have encountered in various products and projects.
          </p>
        </div>

        <div class="lg:col-span-2">
          <div class="grid sm:grid-cols-2 gap-8 md:gap-12">
            {
              freetools.map((callout) => (
                <div class="flex gap-x-5">
                  {/* <svg
                    class="shrink-0 mt-1 size-6 text-blue-600 dark:text-blue-500"
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <>
                      <path d="M7 10v12" />
                      <path d="M15 5.88 14 10h5.83a2 2 0 0 1 1.92 2.56l-2.33 8A2 2 0 0 1 17.5 22H4a2 2 0 0 1-2-2v-8a2 2 0 0 1 2-2h2.76a2 2 0 0 0 1.79-1.11L12 2h0a3.13 3.13 0 0 1 3 3.88Z" />
                    </>
                  </svg> */}
                  <callout.icon
                    aria-hidden="true"
                    className="shrink-0 mt-1 size-6 text-purple-600 dark:text-purple-500"
                  />
                  <div class="grow">
                    <h3 class="text-lg font-semibold text-gray-800 dark:text-white">{callout.name}</h3>
                    <p class="mt-1 text-gray-600 dark:text-neutral-400">{callout.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <div class="mt-8 md:mt-12 flex justify-center items-center gap-x-3">
        <p class="text-sm text-gray-500 dark:text-neutral-400">Need a custom plan?</p>

        <button
          type="button"
          class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white text-gray-800 shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-50 dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
        >
          Contact us
        </button>
      </div>
    </div>
  </div>
</Layout>
