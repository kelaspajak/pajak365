---
import { Anvil, Aperture, Camera, Check, Star, Zap } from 'lucide-react'
import tiers from '../data/tiers.json'
import Layout from '../layouts/base.astro'

const pdfs = [
  {
    kategori: 'Desk and Office',
    breadcrumbs: [
      { id: 1, name: 'Divide Color', href: '#' },
      { id: 2, name: 'Utilities for controlling', href: '#' },
    ],
  },
  {
    kategori: 'Self-Improvement',
    breadcrumbs: [
      { id: 1, name: 'Men', href: '#' },
      { id: 2, name: 'Clothing', href: '#' },
    ],
  },
  {
    kategori: 'Travel',
    breadcrumbs: [
      { id: 1, name: 'Men', href: '#' },
      { id: 2, name: 'Clothing', href: '#' },
    ],
  },
]

function classNames(...classes) {
  return classes.filter(Boolean).join(' ')
}
---

<Layout id="main-container">
  <div
    class="relative overflow-hidden before:absolute before:top-1/2 before:start-1/2 before:bg-[url('../svg/component/hyperdrive.svg')] dark:before:bg-[url('../svg/component-dark/hyperdrive.svg')] before:bg-no-repeat before:bg-center before:w-full before:h-96 before:-z-[1] before:transform before:-translate-y-1/2 before:-translate-x-1/2"
  >
    <div class="max-w-3xl mx-auto relative text-center px-4 sm:px-6 lg:px-8 py-10 md:py-24">
      <div class="inline-block bg-gradient-to-tl from-blue-600 via-transparent to-purple-400 p-px rounded-xl mb-3">
        <div
          class="bg-white rounded-xl py-1.5 px-3 text-3xl font-bold md:text-4xl lg:text-5xl lg:leading-tight dark:bg-neutral-900"
        >
          <span class="bg-clip-text bg-gradient-to-tl from-blue-600 to-purple-400 text-transparent"> 1.200+ </span>
        </div>
      </div>

      <h1 class="text-3xl font-bold md:text-4xl lg:text-5xl lg:leading-tight dark:text-white">
        Akses dokumen perpajakan secara instan kapan saja dan di mana saja.
      </h1>
      <p class="mt-4 md:text-lg text-gray-600 dark:text-neutral-400">
        Kami membantu wajib pajak memperoleh dokumen perpajakan yang cepat, akurat, dan sesuai regulasi, memberikan
        mereka ketenangan pikiran dan lebih banyak waktu untuk fokus pada bisnis mereka.
      </p>
    </div>
  </div>

  <div class="overflow-hidden">
    <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
      <div class="mx-auto max-w-2xl mb-8 lg:mb-14 text-center">
        <h2 class="text-3xl lg:text-4xl font-bold dark:text-neutral-200">
          Wajib Pajak, Konsultan Pajak atau Staf Pajak? Kami siap membantu Anda.
        </h2>
      </div>

      <div class="relative xl:w-10/12 xl:mx-auto">
        <div class="mx-auto py-12 grid md:grid-cols-2 gap-4 sm:gap-6 items-center">
          {
            tiers.map((tier, tierIdx) => (
              <a href={tier.href}>
                <div
                  class={classNames(
                    tier.featured
                      ? 'shadow-xl shadow-purple-200 p-5 dark:border-neutral-800 dark:shadow-purple-900/20'
                      : 'p-4 dark:border-neutral-800',
                    'relative z-10 bg-white border rounded-xl md:p-10 dark:bg-neutral-900',
                  )}
                >
                  <h3 class="text-xl font-bold dark:text-neutral-200">{tier.title}</h3>
                  <div class="text-sm text-gray-500 dark:text-neutral-500">{tier.description}</div>

                  {/* harga */}
                  {/* <div class="mt-5">
                    <span class="text-6xl font-bold dark:text-neutral-200">
                      {tier.priceMonthly}
                    </span>
                  </div> */}

                  <div class="mt-5 grid gap-y-2 py-4 first:pt-0 last:pb-0 sm:gap-x-6 sm:gap-y-0">
                    <ul class="space-y-2 text-sm sm:text-base">
                      {tier.features.map((feature) => (
                        <li class="flex gap-x-3">
                          <span class="mt-0.5 size-5 flex justify-center items-center">
                            <Star className="shrink-0 size-4 text-gray-500 dark:text-neutral-200" />
                          </span>
                          <span class="text-sm text-gray-500 dark:text-neutral-200">{feature}</span>
                        </li>
                      ))}
                    </ul>
                  </div>

                  <div class="mt-5 grid grid-cols-2 gap-x-4 py-4 first:pt-0 last:pb-0">
                    <div>
                      <p class="text-sm text-gray-500 dark:text-neutral-500">Cancel anytime.</p>
                      <p class="text-sm text-gray-500 dark:text-neutral-500">No card required.</p>
                    </div>

                    <div class="flex justify-end">
                      <button
                        type="button"
                        class="py-3 px-4 inline-flex items-center gap-x-2 text-sm font-medium rounded-lg border border-gray-200 bg-white shadow-sm hover:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:bg-gray-50 dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800"
                      >
                        {tier.type}
                      </button>
                    </div>
                  </div>
                </div>
              </a>
            ))
          }
        </div>
      </div>

      <div class="mt-7 text-center">
        <p class="text-xs text-gray-400">Prices in USD. Taxes may apply.</p>
      </div>
    </div>
  </div>

  <!-- FAQ -->
  <!-- Icon Blocks -->
  <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto">
    <!-- Grid -->
    <div class="grid md:grid-cols-2 gap-12">
      <div class="lg:w-3/4">
        <h2 class="text-3xl text-gray-800 font-bold lg:text-4xl dark:text-white">
          Collaborative tools to design better user experience
        </h2>
        <p class="mt-3 text-gray-800 dark:text-neutral-400">
          We help businesses bring ideas to life in the digital world, by designing and implementing the technology
          tools that they need to win.
        </p>
        <p class="mt-5">
          <a
            class="inline-flex items-center gap-x-1 text-sm text-blue-600 decoration-2 hover:underline focus:outline-none focus:underline font-medium dark:text-blue-500"
            href="#"
          >
            Contact sales to learn more
            <svg
              class="shrink-0 size-4 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
            >
          </a>
        </p>
      </div>
      <!-- End Col -->

      <div class="space-y-6 lg:space-y-10">
        <!-- Icon Block -->
        {
          pdfs.map((pdf, pdfIdx) => (
            <div class="flex gap-x-5 sm:gap-x-8">
              <span class="shrink-0 inline-flex justify-center items-center size-[46px] rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm mx-auto dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-200">
                <svg
                  class="shrink-0 size-5"
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <>
                    <path d="M14 9a2 2 0 0 1-2 2H6l-4 4V4c0-1.1.9-2 2-2h8a2 2 0 0 1 2 2v5Z" />
                    <path d="M18 9h2a2 2 0 0 1 2 2v11l-4-4h-6a2 2 0 0 1-2-2v-1" />
                  </>
                </svg>
              </span>
              <div class="grow">
                <h3 class="text-base sm:text-lg font-semibold text-gray-800 dark:text-neutral-200">{pdf.kategori}</h3>
                <p class="mt-1">
                  {pdf.breadcrumbs.map((breadcrumb) => (
                    <a href={breadcrumb.href} class="mr-2 text-sm font-medium text-blue-600 after:content-['_â†—']">
                      {breadcrumb.name}
                    </a>
                  ))}
                </p>
              </div>
            </div>
          ))
        }
        <!-- End Icon Block -->
      </div>
      <!-- End Col -->
    </div>
    <!-- End Grid -->
  </div>
  <!-- End Icon Blocks -->
</Layout>
