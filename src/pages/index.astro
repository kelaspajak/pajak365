function classNames(...classes) {
  return classes.filter(Boolean).join(' ')
}
---

<Layout>
  <div
    class="relative overflow-hidden before:absolute before:start-1/2 before:top-1/2 before:-z-[1] before:h-96 before:w-full before:-translate-x-1/2 before:-translate-y-1/2 before:transform before:bg-[url('https://preline.co/assets/svg/component/hyperdrive.svg')] before:bg-center before:bg-no-repeat dark:before:bg-[url('../svg/component-dark/hyperdrive.svg')]"
  >
    <div class="relative mx-auto max-w-3xl px-4 py-10 text-center sm:px-6 md:py-24 lg:px-8">
      <div class="mb-3 inline-block rounded-xl bg-gradient-to-tl from-blue-600 via-transparent to-purple-400 p-px">
        <div
          class="rounded-xl bg-white px-3 py-1.5 text-3xl font-bold md:text-4xl lg:text-5xl lg:leading-tight dark:bg-neutral-900"
        >
          <span class="bg-gradient-to-tl from-blue-600 to-purple-400 bg-clip-text text-transparent"> 1.200+ </span>
        </div>
      </div>

      <h1 class="text-3xl font-bold md:text-4xl lg:text-5xl lg:leading-tight dark:text-white">
        Akses dokumen perpajakan secara instan kapan saja dan di mana saja.
      </h1>
      <p class="mt-4 text-gray-600 md:text-lg dark:text-neutral-400">
        Kami membantu wajib pajak memperoleh dokumen perpajakan yang cepat, akurat, dan sesuai regulasi, memberikan
        mereka ketenangan pikiran dan lebih banyak waktu untuk fokus pada bisnis mereka.
      </p>
    </div>
  </div>

  <div class="overflow-hidden">
    <div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
      <div class="mx-auto mb-8 max-w-2xl text-center lg:mb-14">
        <h2 class="text-3xl font-bold lg:text-4xl dark:text-neutral-200">
          Wajib Pajak, Konsultan Pajak atau Staf Pajak? Kami siap membantu Anda.
        </h2>
      </div>

      <div class="relative xl:mx-auto xl:w-full">
        <div class="mx-auto grid items-center gap-4 py-12 sm:gap-6 md:grid-cols-2">
          {
            tiers.map((tier, tierIdx) => (
              <a href={tier.href}>
                <div
                  class={classNames(
                    tier.featured
                      ? 'bg-purple-100 p-5 shadow-xl shadow-purple-200 dark:border-neutral-800 dark:shadow-purple-900/20'
                      : 'p-4 dark:border-neutral-800',
                    'relative z-10 rounded-xl border bg-white md:p-10 dark:bg-neutral-900',
                  )}
                >
                  <h3 class="text-xl font-bold dark:text-neutral-200">{tier.title}</h3>
                  <div class="text-sm text-gray-500 dark:text-neutral-500">{tier.description}</div>

                  {/* https://tailwindui.com/templates/catalyst */}
                  <ul class="mt-10 space-y-8 border-t border-slate-900/10 pt-10 text-sm/6 text-slate-700">
                    {tier.features.map((feature) => (
                      <li class="flex">
                        <span class="flex size-5 items-center justify-center">
                          <Check className="shrink-0 size-4 text-gray-900 dark:text-neutral-200" />
                        </span>
                        <p class="ml-5 text-sm text-gray-600">
                          <strong class="font-semibold text-gray-700">{feature.title}</strong> — {feature.subtitle}
                        </p>
                      </li>
                    ))}
                  </ul>
                  {tier.featured && (
                    <div class="relative mt-10 flex rounded-xl border border-slate-600/10 bg-slate-50 p-6">
                      <svg
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                        class="size-8 flex-none"
                        stroke="#94A3B8"
                        stroke-width="1.5"
                      >
                        <circle cx="11" cy="16" r="3.25" fill="#94A3B8" fill-opacity=".2" />
                        <circle cx="21" cy="13" r="3.25" fill="#94A3B8" fill-opacity=".2" />
                        <path
                          d="M28.909 19c.223-.964.341-1.968.341-3 0-7.318-5.932-13.25-13.25-13.25S2.75 8.682 2.75 16c0 1.032.118 2.036.341 3"
                          stroke-linecap="round"
                        />
                        <path
                          d="m18.031 29.016-2.187.109s-1.475-.118-1.827-.29c-1.049-.51-.579-2.915 0-3.95 1.157-2.064 3.752-5.135 7.125-5.135h.024c2.5 0 4.404 1.687 5.692 3.401-1.963 2.975-5.161 5.276-8.827 5.865Z"
                          fill="#94A3B8"
                          fill-opacity=".2"
                          stroke-linejoin="round"
                        />
                        <path
                          d="m14.001 24.913.016-.027c.26-.465.593-.98.991-1.5-1.042-.918-2.374-1.636-3.988-1.636H11c-2.094 0-3.847 1.208-5.055 2.492a12.987 12.987 0 0 0 7.987 4.595l.057-.016c-1.004-.534-.555-2.868.012-3.908Z"
                          fill="#94A3B8"
                          fill-opacity=".2"
                          stroke-linejoin="round"
                        />
                      </svg>
                      <p class="ml-5 text-sm/6 text-slate-700">
                        <strong class="font-semibold text-slate-900">Available for teams</strong> — get access to all of
                        our templates and components plus any future updates for your entire team.
                      </p>
                    </div>
                  )}
                </div>
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>

  <!-- Icon Blocks -->
  <div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <!-- Grid -->
    <div class="grid gap-12 md:grid-cols-2">
      <div class="lg:w-3/4">
        <h2 class="text-3xl font-bold lg:text-4xl dark:text-white">
          Informasi di tangan Anda, solusi untuk kewajiban perpajakan Anda.
        </h2>
        <p class="mt-3 dark:text-neutral-400">
          Dokumen dikelompokkan berdasarkan kategori seperti jenis pajak, regulasi, dan tema sosialisasi, sehingga Anda
          dapat menemukan apa yang dibutuhkan dengan cepat.
        </p>
        <p class="mt-5">
          <a
            class="inline-flex items-center gap-x-1 text-sm font-medium text-blue-600 decoration-2 hover:underline focus:underline focus:outline-none dark:text-blue-500"
            href="#"
          >
            Contact sales to learn more
            <svg
              class="size-4 shrink-0 transition ease-in-out group-hover:translate-x-1 group-focus:translate-x-1"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"><path d="m9 18 6-6-6-6"></path></svg
            >
          </a>
        </p>
      </div>
      <!-- End Col -->

      <div class="space-y-6 lg:space-y-10">
        <!-- Icon Block -->
        {
          products.map((product) => (
            <div class="flex gap-x-5 sm:gap-x-8">
              <span class="mx-auto inline-flex size-[46px] shrink-0 items-center justify-center rounded-full border border-gray-200 bg-white text-gray-800 shadow-sm dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-200">
                <product.icon class="size-5 shrink-0" />
              </span>
              <div class="grow">
                <h3 class="text-sm font-semibold text-gray-600 sm:text-lg dark:text-neutral-200">{product.name}</h3>
                {product.features.map((feature) => (
                  <span class="mt-1 text-gray-600 dark:text-neutral-400">{feature.name}</span>
                ))}
              </div>
            </div>
          ))
        }
      </div>

      <!-- End Grid -->
    </div>
    <!-- End Icon Blocks -->
  </div>
</Layout>
